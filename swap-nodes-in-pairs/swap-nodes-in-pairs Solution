/**
  * Definition for singly-linked list.
  * struct ListNode {
  *     int val;
  *     ListNode *next;
  *     ListNode() : val(0), next(nullptr) {}
  *     ListNode(int x) : val(x), next(nullptr) {}
  *     ListNode(int x, ListNode *next) : val(x), next(next) {}
  * };
  */ 
 class   Solution   { 
 public : 
     ListNode *   swapadj ( ListNode *  head ) 
      { 
          if ( head == NULL   ||  head -> next == NULL ) 
              return  head ; 
         ListNode *  cur = head ;   // 3 
         ListNode *  next = head -> next ;   //4 
         ListNode *  supernext = next -> next ;   //null 
         cur -> next = supernext ; 
         next -> next = cur ; 
         head = next ; 
         head -> next -> next = swapadj ( supernext ) ; 
          return  head ; 
      } 
     ListNode *   swapPairs ( ListNode *  head )   { 
          if ( head == NULL ) 
              return  head ; 
         
          return   swapadj ( head ) ; 
      } 
 } ;