class   Solution   { 
 public : 
      int   countOdds ( int  low ,   int  high )   { 
          if ( low % 2 == 0   &&  high % 2 == 0 )   
              return   ( high - low ) / 2 ; 
          return   ( high - low ) / 2 + 1 ; 
          // cases both even 4 8 => 2  =>diff/2 
          // both odd 5 9 => 3 => diff/2+1 
          // odd even 5 8 => 2 => diff/2+1 
          // even odd 4 9 => 3 => diff/2+1 
 
      } 
 } ;